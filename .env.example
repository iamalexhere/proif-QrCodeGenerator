# Environment Configuration
# Copy this file to .env and update the values

# Environment: development or production
APP_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=qrcode_db
DB_USER=root
DB_PASS=

# Application URLs
# For development: use your local server (e.g., http://localhost/qr)
# For production: use your domain (e.g., https://yourdomain.com)
BASE_URL=http://qr.local

# Short URL Configuration
SHORT_DOMAIN=qr.local/r

# Security
# Generate a random 32-character string for production
APP_SECRET=your-32-character-random-secret-key

# Advertisement Configuration
AD_DISPLAY_TIME=3

# Google AdSense Configuration
# Enable/disable AdSense ads (true/false)
ADSENSE_ENABLED=true

# Your Google AdSense Publisher ID (ca-pub-xxxxxxxxx)
ADSENSE_CLIENT_ID=ca-pub-xxxxxxxxx

# AdSense Ad Unit IDs for different placements
# Banner ad (728x90 or responsive)
ADSENSE_BANNER_SLOT=1234567890

# Rectangle ad (300x250)
ADSENSE_RECTANGLE_SLOT=1234567890

# Mobile banner ad (320x50)
ADSENSE_MOBILE_BANNER_SLOT=1234567890

# AdSense auto ads (true/false)
ADSENSE_AUTO_ADS=true