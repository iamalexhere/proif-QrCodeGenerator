# Environment Configuration
# Copy this file to .env and update the values

# Environment: development or production
APP_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=qr_generator
DB_USER=your_db_user
DB_PASS=your_db_password

# Application URLs
# For development: use IP address (e.g., http://192.168.1.100)
# For production: use your domain (e.g., https://yourdomain.com)
BASE_URL=http://localhost:8000

# Short URL Configuration
SHORT_DOMAIN=qrcode.alexhere.me

# Security
# Generate a random 32-character string for production
APP_SECRET=32-character-random-secret-key

# Error Logging
LOG_PATH=/var/www/qr-generator/logs/

# Advertisement Configuration (for future use)
ADSENSE_CLIENT_ID=
ADSENSE_SLOT_ID=
AD_DISPLAY_TIME=5

# Rate Limiting (requests per hour per IP)
RATE_LIMIT=100